<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5A720"
    tools:context=".Settings">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="417dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#2C3E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/drawer" />

    <TextView
        android:id="@+id/name"
        android:layout_width="178dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@id/btnEdit"
        android:layout_alignParentTop="true"
        android:foreground="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/age"
        android:layout_width="176dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/name"
        android:layout_alignParentTop="true"
        android:foreground="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="177dp"
        android:layout_height="41dp"
        android:layout_marginBottom="20dp"
        android:foreground="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/height"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/name"
        android:layout_alignParentTop="true"
        android:foreground="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="174dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/name"
        android:layout_alignParentBottom="true"
        android:foreground="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58000004" />

    <TextView
        android:id="@+id/tarWeight"
        android:layout_width="171dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/name"
        android:layout_alignParentBottom="true"
        android:foreground="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68" />

    <TextView
        android:id="@+id/tarSteps"
        android:layout_width="169dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/name"
        android:layout_alignParentBottom="true"
        android:foreground="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toEndOf="@+id/L6"
        app:layout_constraintTop_toBottomOf="@+id/tarWeight"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="138dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:backgroundTint="#2C3E3C"
        android:fontFamily="@font/cinzel_bold"
        android:text="Edit Profile"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87" />

    <TextView
        android:id="@+id/L2"
        android:layout_width="99dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/L3"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/cinzel_bold"
        android:text="Age: "
        android:textColor="#2C3E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002" />

    <TextView
        android:id="@+id/L3"
        android:layout_width="99dp"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/L4"
        android:layout_alignTop="@+id/height"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/cinzel_bold"
        android:text="Height: "
        android:textColor="#2C3E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48000002" />

    <TextView
        android:id="@+id/L7"
        android:layout_width="99dp"
        android:layout_height="34dp"
        android:fontFamily="@font/cinzel_bold"
        android:text="Gender: "

        android:textColor="#2C3E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnOut"
        app:layout_constraintVertical_bias="0.19999999" />

    <TextView
        android:id="@+id/L5"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/L1"
        android:layout_alignTop="@+id/tarWeight"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/cinzel_bold"
        android:text="Target Weight: "
        android:textColor="#2C3E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <TextView
        android:id="@+id/L4"
        android:layout_width="99dp"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/L5"
        android:layout_alignTop="@+id/weight"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/cinzel_bold"
        android:text="Weight: "
        android:textColor="#2C3E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/L1"
        android:layout_width="99dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/cinzel_bold"
        android:text="Name: "
        android:textColor="#2C3E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999" />

    <TextView
        android:id="@+id/L6"
        android:layout_width="125dp"
        android:layout_height="23dp"
        android:layout_alignStart="@+id/L3"
        android:layout_alignTop="@+id/tarSteps"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/cinzel_bold"
        android:text="Target Steps: "
        android:textColor="#2C3E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77" />

    <Button
        android:id="@+id/btnOut"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="#2C3E3C"
        android:fontFamily="@font/cinzel_bold"
        android:text="Logout"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

</androidx.constraintlayout.widget.ConstraintLayout>