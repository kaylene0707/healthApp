<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5A720"
    tools:context=".Weight_Log">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="602dp"
        android:background="#2C3E3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/drawer" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="331dp"
        android:layout_height="247dp"
        android:layout_marginBottom="324dp"
        android:layout_marginEnd="51dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="31dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ring_fit_stretch" />

    <EditText
        android:id="@+id/Date"
        android:layout_width="277dp"
        android:layout_height="49dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="76dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="333dp"
        android:hint="Enter the Date:"
        android:fontFamily="@font/cinzel_bold"
        android:textColorHint="#2C3E3C"
        app:layout_constraintBottom_toTopOf="@+id/weeklyweight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/weeklyweight"
        android:layout_width="277dp"
        android:layout_height="49dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="76dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/cinzel_bold"
        android:hint="Enter your weekly weight::"
        android:textColorHint="#2C3E3C"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="124dp"
        android:layout_height="57dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="22dp"
        android:text="Submit"
        android:backgroundTint="#2C3E3C"
        android:fontFamily="@font/cinzel_bold"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toStartOf="@+id/btnprog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weeklyweight"
        tools:text="Submit" />

    <Button
        android:id="@+id/btnprog"
        android:layout_width="127dp"
        android:layout_height="61dp"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="46dp"
        android:text="View your Progress"
        android:backgroundTint="#2C3E3C"
        android:fontFamily="@font/cinzel_bold"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSubmit"
        app:layout_constraintTop_toBottomOf="@+id/weeklyweight" />

</androidx.constraintlayout.widget.ConstraintLayout>